import java.util.Scanner;
public class taska
{
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
        System.out.println("1. search for a term ");
        System.out.println("2. search for a key word in the discription ");
        System.out.println("3. end ");
        System.out.println("key in choice");
        String number = input.nextLine();
        String option = " ";
        switch (number){
            case "1": option = "you chose to search for a term ";
            break;
            case "2": option = "you chose to search for a keyword in the discriptions";
            break;
            case "3": option = "You chose to end"; 
        }
    }
    }

